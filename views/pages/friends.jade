extends ../layout

block headScripts
  script(src="/angular/controllers/friendsController.js")
  script(src="/angular/directives/friendsContent.js")

block nav_buttons
  li
    a(href="/feed") Feed
  li
    a(href="/hangs") Hangs
  li.active
    a(href="/friends") Friends
  li
    a(href="/profile") My Profile

block content
  div(data-role=content ng-controller="friendsController as fc")
    .list-group
      a(href="#" class="list-group-item" ng-repeat="f in fc.friends")
        friends-content
