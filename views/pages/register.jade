extends ../layout

block content
  .container-fluid
    .row
      div(class="col-md-4 col-md-offset-4")
        div(class="login-panel panel panel-default")
          div(class="panel-heading")
            h3(class="panel-title") Needed User Information 
          div(class="panel-body")
            form(name="form" role="form" novalidation)
              fieldset
                div(class="form-group")
                  p Personal
                  input(class="form-control" placeholder="FirstName"
                  name="Fname" type="name")
                div(class="form-group")
                  input(class="form-control" placeholder="LastName"
                  name="Lname" type="name")
                div(class="form-group")
                  input(class="form-control" placeholder="E-mail"
                  name="email" type="email")
                div(class="form-group")
                  input(class="form-control" placeholder="Cellphone"
                  name="number" type="text")
                div(class="form-group")
                  p Date of Birth
                  input(class="col-md-3" placeholder="31" type="number")
                  input(class="col-md-3" placeholder="12" type="number")
                  input(class="col-md-6" placeholder="1999" type="number")
                    
                div(class="form-group")
                  p Password
                  input(class="form-control" placeholder="Password"
                  name="password" type="password")
                  input(class="form-control" placeholder="Confirm Password"
                  name="password" type="password")
                div(class="form-group")
                  a(class="btn btn-lg btn-info") Submit