extends ../layout

block headScripts
  script(src="/angular/index.js")
  script(src="/stylesheets/color.css")

block content
  .container-fluid
    .row
      div(class="col-md-4 col-md-offset-4" ng-controller="registerController")
        div(class="login-panel panel panel-default")
          div(class="panel-heading")
            h3(class="panel-title") Needed User Information 
          div(class="panel-body")
            form(name="form" role="form" method="post" action="query/register" novalidation)
              p(class="text-warning")= error
              div(class="form-group" ng-class="{ 'has-error': form.Fname.$invalid && form.Fname.$dirty }")
                p Personal
                input(class="form-control" placeholder="First Name"
                name="first_name" type="text" ng-model="regData.first_name" required)
              div(class="form-group" ng-class="{ 'has-error': form.Lname.$invalid && form.Lname.$dirty }")
                input(class="form-control" placeholder="Last Name"
                name="last_name" type="text" ng-model="regData.last_name" required)
              div(class="form-group" ng-class="{ 'has-error': form.email.$invalid && form.email.$dirty }")
                input(class="form-control" placeholder="E-mail"
                name="email" type="email" ng-model="regData.email" required)
              div(class="form-group" ng-class="{ 'has-error': form.number.$invalid && form.number.$dirty }")
                input(class="form-control" placeholder="Cellphone"
                name="number" type="number" ng-model="regData.phone" min="1000000000" max="9999999999")
              div(class="form-group")
                p Date of Birth
                input(class="form-control" placeholder="12" type="date" required)
              div(class="form-group" ng-class="{ 'has-error': form.password.$invalid && form.password.$dirty }")
                p Password
                input(class="form-control" placeholder="Password"
                name="password" type="password" ng-model="regData.password" required)
              div(class="form-group" ng-class="{ 'has-error': form.Cpassword.$invalid && form.Cpassword.$dirty }")
                input(class="form-control" placeholder="Confirm Password"
                name="Cpassword" type="password" ng-model="regData.cPassword" required)
              div(class="form-group")
                input(class="btn btn-lg btn-info" type="submit" value="Register")
