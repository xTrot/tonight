extends ../layout

block nav_buttons
  li
    a(href="/feed") Feed
  li
    a(href="/hangs") Hangs
  li
    a(href="/friends") Friends
  li
    a(href="/groups") Groups
  li.active
    a(href="/businesses") Business Pages
  li
    a(href="/profile") My Profile

block headScripts
  script(src="/angular/controllers/businessController.js")
  script(src="/angular/directives/businessContent.js")

block content
  div(data-role=content ng-controller="businessController as bc")
    .list-group
      a(href="/businessprofile?b_id={{b.page_id}}" class="list-group-item" ng-repeat="b in bc.business")
        business-content